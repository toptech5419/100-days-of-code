{
    "manifest_version": 3,
    "name": "Crypto Dashboard",
    "version": "1.0.0",
    "description": "A dashboard for tracking cryptocurrency prices, weather, and time.",
    "action": {
        "default_icon": "favicon_io/favicon-32x32.png"
    },
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "permissions": [
        "notifications"
    ],
    "host_permissions": [
        "https://apis.scrimba.com/*",
        "https://api.coingecko.com/*",
        "http://openweathermap.org/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' http://openweathermap.org https://images.unsplash.com"
    },
    "icons": {
        "16": "./favicon_io/favicon-16x16.png",
        "32": "./favicon_io/favicon-32x32.png",
        "128": "./favicon_io/apple-touch-icon.png"
    }
}